{
  "manifest_version": 2,
  "name": "Cuhelper Tools ",
  "version": "1.0",
  "description": "Tool for solving mcqs  quickly",
  "permissions": ["tabs", "activeTab", "clipboardWrite", "notifications"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "res/icon-16.png",
      "48": "res/icon-48.png",
      "128": "res/icon-128.png"
    },
    "icons": {
      "16": "res/icon-16.png",
      "48": "res/icon-48.png",
      "128": "res/icon-128.png"
    }
  }
}
